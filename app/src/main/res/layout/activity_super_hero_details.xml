<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/deep_space_gradiant"
    android:orientation="vertical"
    tools:context=".view.HomeScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/superHeroImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_20"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/superHeroName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="@dimen/sp_20"/>

        <TextView
            android:id="@+id/superHeroDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dsafasfdsaf"
            android:layout_marginTop="@dimen/dp_10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:id="@+id/superHeroRace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Race"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/superHeroRaceValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Race Value"
                android:layout_weight="0.7"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:foreground="@color/iconTint"
            android:layout_marginTop="@dimen/dp_5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:id="@+id/superHeroGender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Gender"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/superHeroGenderValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Gender Value"
                android:layout_weight="0.7"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:foreground="@color/iconTint"
            android:layout_marginTop="@dimen/dp_5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_15">

            <TextView
                android:id="@+id/superHeroHeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Height"
                android:layout_weight="0.3"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/superHeroHeightValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Height Value"
                android:layout_weight="0.7"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:foreground="@color/iconTint"
            android:layout_marginTop="@dimen/dp_5"/>

    </LinearLayout>

</LinearLayout>